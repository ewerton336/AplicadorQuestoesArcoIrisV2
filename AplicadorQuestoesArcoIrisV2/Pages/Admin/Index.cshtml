@page
@model AplicadorQuestoesArcoIrisV2.Pages.Admin.IndexModel
<h2>Cadastrar Pergunta</h2>

<form method="post">
    <div class="form-group">
        <label for="Pergunta.Texto">Texto da Pergunta:</label>
        <textarea id="Pergunta.Texto" name="Pergunta.Texto" class="form-control" rows="4" required>@*@Model.Pergunta.Texto*@</textarea>
    </div>

    <h3>Alternativas</h3>

    <!-- Repita esse bloco para cada alternativa -->
    <div class="form-group">
        <label for="Alternativas[0].Texto">Texto da Alternativa 1:</label>
        <input id="Alternativas[0].Texto" name="Alternativas[0].Texto" class="form-control" required />
        <input type="radio" id="Alternativas[0].Correta" name="Pergunta.RespostaCorretaId" value="0" />
        <label for="Alternativas[0].Correta">Resposta Correta</label>
    </div>

    <div class="form-group">
        <label for="Alternativas[1].Texto">Texto da Alternativa 1:</label>
        <input id="Alternativas[1].Texto" name="Alternativas[1].Texto" class="form-control" required />
        <input type="radio" id="Alternativas[1].Correta" name="Pergunta.RespostaCorretaId" value="1" />
        <label for="Alternativas[1].Correta">Resposta Correta</label>
    </div>

    <div class="form-group">
        <label for="Alternativas[2].Texto">Texto da Alternativa 2:</label>
        <input id="Alternativas[2].Texto" name="Alternativas[2].Texto" class="form-control" required />
        <input type="radio" id="Alternativas[2].Correta" name="Pergunta.RespostaCorretaId" value="2" />
        <label for="Alternativas[2].Correta">Resposta Correta</label>
    </div>

    <div class="form-group">
        <label for="Alternativas[3].Texto">Texto da Alternativa 3:</label>
        <input id="Alternativas[3].Texto" name="Alternativas[3].Texto" class="form-control" required />
        <input type="radio" id="Alternativas[3].Correta" name="Pergunta.RespostaCorretaId" value="3" />
        <label for="Alternativas[3].Correta">Resposta Correta</label>
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>
