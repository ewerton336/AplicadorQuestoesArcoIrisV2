@page
@model AplicadorQuestoesArcoIrisV2.Pages.Admin.CadastrarquestaoModel
<h2>Cadastrar Pergunta</h2>

<form method="post">
    <div class="form-group">
        <label for="Pergunta.Texto">Texto da Pergunta:</label>
        <textarea id="Pergunta.Texto" name="Pergunta.Texto" class="form-control" rows="4" required>@Model.Pergunta.Texto</textarea>
    </div>

<h3>Alternativas</h3>

    <div class="form-group">
        <label for="Pergunta.Alternativas[0].Texto">Texto da Alternativa 1:</label>
        <input id="Pergunta.Alternativas[0].Texto" name="Pergunta.Alternativas[0].Texto" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Pergunta.Alternativas[1].Texto">Texto da Alternativa 2:</label>
        <input id="Pergunta.Alternativas[1].Texto" name="Pergunta.Alternativas[1].Texto" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="AlternativaCorretaId">Selecionar Alternativa Correta:</label>
        <select id="AlternativaCorretaId" name="Pergunta.AlternativaCorretaId" class="form-control" required>
            <option value="0">Alternativa 1</option>
            <option value="1">Alternativa 2</option>
        </select>
    </div>



<button type="submit" class="btn btn-primary">Cadastrar</button>


</form>

