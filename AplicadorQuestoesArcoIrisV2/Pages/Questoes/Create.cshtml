@page
@model CadastrarQuestaoModel
<h2>Cadastrar Questao</h2>

<form method="post">
    <div class="form-group">
        <label for="Questao.Texto">Texto da Questao:</label>
        <textarea id="Questao.Texto" name="Questao.Texto" class="form-control" rows="4" required>@Model.Questao.Texto</textarea>
    </div>

<h3>Alternativas</h3>

    <div class="form-group">
        <label for="Questao.Alternativas[0].Texto">Texto da Alternativa 1:</label>
        <input id="Questao.Alternativas[0].Texto" name="Questao.Alternativas[0].Texto" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Questao.Alternativas[1].Texto">Texto da Alternativa 2:</label>
        <input id="Questao.Alternativas[1].Texto" name="Questao.Alternativas[1].Texto" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Questao.Alternativas[2].Texto">Texto da Alternativa 2:</label>
        <input id="Questao.Alternativas[2].Texto" name="Questao.Alternativas[2].Texto" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Questao.Alternativas[3].Texto">Texto da Alternativa 2:</label>
        <input id="Questao.Alternativas[3].Texto" name="Questao.Alternativas[3].Texto" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="AlternativaCorretaPosition">Selecionar Alternativa Correta:</label>
        <select id="AlternativaCorretaPosition" name="Questao.AlternativaCorretaPosition" class="form-control" required>
            <option value="0">Alternativa 1</option>
            <option value="1">Alternativa 2</option>
            <option value="2">Alternativa 3</option>
            <option value="3">Alternativa 4</option>
        </select>
    </div>
<button type="submit" class="btn btn-primary">Cadastrar</button>
</form>

