@page
@model AplicadorQuestoesArcoIrisV2.Pages.Questoes.ListarQuestoesModel
@{
    ViewData["Title"] = "Listar Questões";
}

<h2>Listar Questões</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Texto da Pergunta</th>
            <th>Resposta Correta</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pergunta in Model.Questoes)
        {
            <tr>
                <td>@pergunta.Id</td>
                <td>@pergunta.Texto</td>
                <td>@pergunta.TextoRespostaCorreta</td>
                <td>
                    <a asp-page="./EditarQuestao" asp-route-id="@pergunta.Id">Editar</a> |
                    <a asp-page="./ExcluirQuestao" asp-route-id="@pergunta.Id">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>

